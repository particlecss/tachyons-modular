{
  "name": "tachyons-modular-nested",
  "version": "1.0.0",
  "description": "",

  "main": "index.css",
  "style": "index.css",
  "files": [
    "index.css",
    "lib"
  ],

  "repository": {
    "type": "git",
    "url": "git@github.com:particlecss/tachyons-modular.git"
  },
  "keywords": [
    "tachyons",
    "tachyons-css",
    "css",
    "base"
  ],

  "author": "smuemd",
  "license": "MIT",

  "devDependencies": {
    "tachyons-cli": "^1.0.10",
    "watch": "^1.0.1"
  },

  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "mkdir -p build; tachyons index.css > build/build.css",
    "build:minify": "mkdir -p build; tachyons index.css --minify > build/build.min.css",
    "build:docs": "tachyons index.css --generate-docs --package=../../package.json > readme.md",
    "build": "npm run build:css && npm run build:minify && npm run build:docs",
    "build:watch": "watch 'npm run build' ./lib"
  }
}